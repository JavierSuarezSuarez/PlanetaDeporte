<h1>Noticias</h1>
<table>
  <tr>
    <th>Foto</th>
    <th>Fecha</th>
    <th>Titulo</th>
    <th>Subtitulo</th>
    <th>Seccion</th>
    <th>Cuerpo</th>
  </tr>

  <tbody>
    <% @articles.each do |i| %>
      <tr>
        <td><%= i.foto %></td>
        <td><%= i.fecha %></td>
        <td><%= i.titulo %></td>
        <td><%= i.subtitulo %></td>
        <td><%= i.seccion %></td>
        <td><%= i.cuerpo %></td>
        <td><%= link_to 'Ir a la noticia', i %></td>
        <td><%= link_to 'Editar', edit_article_path(i) %></td>
        <td><%= link_to 'Eliminar', i, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nueva Noticia', 'articles/new' %>