<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form.hidden_field :fecha, :value => Time.now.to_i %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div class="field">
    <%= form.label :subtitulo %>
    <%= form.text_field :subtitulo %>
  </div>

  <div class="field">
    <%= form.label :seccion %>
    <%= form.select(:seccion, ['Futbol', 'Baloncesto', 'Tenis', 'Ciclismo', 'Motor', 'eSports'] )%>
  </div>

  <div class="field">
    <%= form.label :imagen%>
    <%= form.file_field :imagen %>
  </div>

  <div class="field">
    <%= form.label :cuerpo %>
    <%= form.text_area :cuerpo, :cols => 70, :rows => 10 %>
  </div>

  <%= form.hidden_field :user_id, :value => current_user.id %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>